# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/nestjs
MONGODB_USER=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_DATABASE=nestjs
MONGODB_HOST=localhost
MONGODB_PORT=27017

# Application Configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-goes-here
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your-refresh-secret-goes-here
JWT_REFRESH_EXPIRATION=7d

# Authentication Security
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_ATTEMPTS=5
AUTH_LOCKOUT_TIME=15
AUTH_THROTTLE_TTL=60
AUTH_THROTTLE_LIMIT=5

# Magic Link
MAGIC_LINK_SECRET=super-magic-link-secret-change-in-production
MAGIC_LINK_EXPIRATION=30m
APP_URL=http://localhost:3000

# Postmark Email Service
POSTMARK_API_KEY=your-postmark-api-key
POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/jpg
UPLOAD_STORAGE_TYPE=local
UPLOAD_DIR=uploads

# Cloudflare R2 Configuration
# Set UPLOAD_STORAGE_TYPE=r2 to use R2 instead of local storage
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket-name.public.r2.dev
R2_USE_SIGNED_URLS=false
R2_URL_EXPIRATION_SECONDS=3600

# Lemon Squeezy Configuration
LEMON_SQUEEZY_API_KEY=your-lemon-squeezy-api-key
LEMON_SQUEEZY_STORE_ID=your-lemon-squeezy-store-id
LEMON_SQUEEZY_WEBHOOK_SECRET=your-lemon-squeezy-webhook-secret 